@model ASP.NET_MVC.Pages.Tables_Patient.CreateModel

@{
    ViewData["Title"] = "Створити";
    Layout = "~/Pages/Tables/_LayoutTable.cshtml";
}

<h1>Створити</h1>

<h4>Пацієнти</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient.First_Name" class="control-label"></label>
                <input asp-for="Patient.First_Name" class="form-control" />
                <span asp-validation-for="Patient.First_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Last_Name" class="control-label"></label>
                <input asp-for="Patient.Last_Name" class="form-control" />
                <span asp-validation-for="Patient.Last_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Middle_Name" class="control-label"></label>
                <input asp-for="Patient.Middle_Name" class="form-control" />
                <span asp-validation-for="Patient.Middle_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Age" class="control-label"></label>
                <input asp-for="Patient.Age" class="form-control" />
                <span asp-validation-for="Patient.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Disease" class="control-label"></label>
                <input asp-for="Patient.Disease" class="form-control" />
                <span asp-validation-for="Patient.Disease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Arrival_Date" class="control-label"></label>
                <input asp-for="Patient.Arrival_Date" class="form-control" />
                <span asp-validation-for="Patient.Arrival_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Discharge_Date" class="control-label"></label>
                <input asp-for="Patient.Discharge_Date" class="form-control" />
                <span asp-validation-for="Patient.Discharge_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Ward" class="control-label"></label>
                <input asp-for="Patient.Ward" class="form-control" />
                <span asp-validation-for="Patient.Ward" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.LuckLevel" class="control-label"></label>
                <input asp-for="Patient.LuckLevel" class="form-control" />
                <span asp-validation-for="Patient.LuckLevel" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="nav-link" asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
