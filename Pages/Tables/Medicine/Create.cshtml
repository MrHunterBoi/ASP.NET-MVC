@page
@model ASP.NET_MVC.Pages.Tables_Medicine.CreateModel

@{
    ViewData["Title"] = "Створити";
    Layout = "~/Pages/Tables/_LayoutTable.cshtml";
}

<h1>Створити</h1>

<h4>Препарати</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Medicine.Name" class="control-label"></label>
                <input asp-for="Medicine.Name" class="form-control" />
                <span asp-validation-for="Medicine.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Producer" class="control-label"></label>
                <input asp-for="Medicine.Producer" class="form-control" />
                <span asp-validation-for="Medicine.Producer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Created_Date" class="control-label"></label>
                <input asp-for="Medicine.Created_Date" class="form-control" />
                <span asp-validation-for="Medicine.Created_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medicine.Expiration_Date" class="control-label"></label>
                <input asp-for="Medicine.Expiration_Date" class="form-control" />
                <span asp-validation-for="Medicine.Expiration_Date" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="nav-link" asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
