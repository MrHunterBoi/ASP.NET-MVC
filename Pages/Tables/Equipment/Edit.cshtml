@page
@model ASP.NET_MVC.Pages.Tables_Equipment.EditModel

@{
    ViewData["Title"] = "Редагування";
    Layout = "~/Pages/Tables/_LayoutTable.cshtml";
}

<h1>Редагування</h1>

<h4>Обладнання</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipment.IDeq" />
            <div class="form-group">
                <label asp-for="Equipment.Name" class="control-label"></label>
                <input asp-for="Equipment.Name" class="form-control" />
                <span asp-validation-for="Equipment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Quantity" class="control-label"></label>
                <input asp-for="Equipment.Quantity" class="form-control" />
                <span asp-validation-for="Equipment.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Manufacturer" class="control-label"></label>
                <input asp-for="Equipment.Manufacturer" class="form-control" />
                <span asp-validation-for="Equipment.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="nav-link" asp-page="./Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
